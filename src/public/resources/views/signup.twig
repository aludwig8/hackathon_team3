{% extends 'layouts/login.twig' %}


{% block content %}
    <div class="header">
        <h2>Register</h2>
    </div>

    <form method="post" action="{{ path_for('user.signup') }}">
        <div class="input-group">
            <label>Name</label>
            <input type="text" name="email" value="">
        </div>
        <div class="input-group">
            <label>Surname</label>
            <input type="text" name="firstname" value="">
        </div>
        <div class="input-group">
            <label>Email</label>
            <input type="email" name="lastname" value="">
        </div>
        <div class="input-group">
            <label>Password</label>
            <input type="password" name="password">
        </div>
        <div class="input-group">
            <button type="submit" class="btn" name="reg_user">Register</button>
        </div>
        <p>
            Already a member? <a href="{{ path_for('user.signin') }}">Sign in</a>
        </p>
    </form>

{% endblock %}
